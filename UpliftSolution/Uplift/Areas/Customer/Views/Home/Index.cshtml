@model  Uplift.Models.ViewModels.HomeViewModel;

@foreach (var category in Model.CategoryList.OrderBy(o => o.DisplayOrder))
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><b>@category.Name</b></h2>
                    <div class="col-12">
                        <div class="row my-3">
                            @foreach(var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" 
                                         style="border: 3px solid #43ac6a; 
                                                border-radius: 5px; 
                                                background:url('/images/leaves.jpg');">

                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary h3 textCard"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <div class="pl-2 table-warning h5 font-weight-bolder textCard" >Price per service</div>
                                            <div class="pr-2 table-warning h4 font-weight-bold textCard" >$@service.Price</div>
                                        </div>
                                        <div style="background: white;">
                                            <img src="@service.ImageUrl" class="card-img-top p-1 rounded" />
                                        </div>
                                        <div class="text-white-50 text-center h5 font-weight-bolder pb2 pt-1 textCard">@service.Frequency.Name</div>
                                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px; font-weight:600;" asp-route-serviceId="@service.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}




